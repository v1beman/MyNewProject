<Window x:Class="Pract8WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract8WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Tbx" Grid.Row="0" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="SerButton" Grid.Row="1" Content="Серилизовать" FontSize="40" Click="SerButton_Click"/>
        <Button x:Name="DeserButton" Grid.Row="2" Content="Десерилизовать" FontSize="40" Click="DeserButton_Click"/>
        <TextBlock x:Name="DeserTbl" Grid.Row="3" FontSize="30"/>
        <Button x:Name="LanBtn" Grid.Row="0" Grid.Column="1" Content="lang" FontSize="30" Click="LanBtn_Click"/>
    </Grid>
</Window>
 