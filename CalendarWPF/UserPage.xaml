<Page x:Class="CalendarWPF.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalendarWPF"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listbox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" SelectionChanged="listbox_SelectionChanged"/>
        <Button x:Name="BackButton" Grid.Column="0" Grid.Row="0" Content="&lt;" Click="BackButton_Click"/>
        <Button x:Name="SaveButton" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Content="Сохранить и выйти" Click="SaveButton_Click"/>

    </Grid>
</Page>
